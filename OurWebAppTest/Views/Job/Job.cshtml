@model JobListing

<head>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <title>Job</title>
    <style>

        .container3Split {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
        }

        .containerSplit {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 30px;
            padding: 10px;
        }

        .section {
            box-sizing: border-box;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .lih {
            display: inline-block;
            margin-right: 20px;
            cursor: pointer;
            font-family: 'Inter', sans-serif;
        }

        .inputTxt {
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            padding: 8px;
            width: calc(100% + 30px);
            height: 35px;
            border: 1px solid #000000;
            border-radius: 5px;
        }

        .submitbtn {
            font-family: 'Inter', sans-serif;
            width: calc(100% + 50px);
            height: 35px;
            font-weight: bold;
            font-size: 16px;
            color: white;
            background-color: #1574d2;
        }

        .jobListingStuff {
            padding: 20px;
            background: lightgrey;
            margin-bottom:10px;
            transition: background-color 0.3s;
        }

            .jobListingStuff:hover {
                background-color: darkgrey; 
            }

        .jlTitle {
            font-size: 20px;
            font-family: 'Inter', sans-serif;
            color: #9c5bc2;
            margin-bottom: 3px;
            display: block;
        }

        .jlMiddle {
            font-size: 15px;
            font-family: 'Inter', sans-serif;
            color: #3471eb;
            margin-bottom: 3px;
            display: block;
        }

        .jlOther {
            font-size: 10px;
            font-family: 'Inter', sans-serif;
            margin-bottom: 3px;
            display: block;
        }

        .jImage {
            height: 30px;
            width: 30px;
            float: right;
        }

    </style>
</head>

<body style="background-color: #dbdbdb;">
    <partial name="_NavBar" />
    <div class="ul" style="padding:5px; position:center; background: #ECECE9">
        <div class="li lih" style="margin-left:60px">
            <input class="inputTxt" placeholder="Search for Jobs" />
        </div>
        <div class="li lih" style="margin-left:120px">
            <select id="Location" asp-for="Location"
                    class="form-select form-select-sm inputTxt"
                    asp-items="@((IEnumerable<SelectListItem>)ViewData["LocationList"]!)">
                    <option value="">-- Select a Location to Filter By --</option>
            </select>
        </div>
        <div class="li lih" style="margin-left:120px">
            <input class="inputTxt" placeholder="Job Title/ Keyword" />
        </div>
        <div class="li lih" style="margin-left:120px;" >
        <input type="submit" value="Search"
                class="btn btn-primary submitbtn" />
        </div>
    </div>

    <div>
        <div class="container3Split">
            <div class="section" style="flex: 1 0 5%;">
                
            </div>
            
            <div class="section" style="flex: 1 0 90%; background:white; padding:20px">
                @if (ViewData["JobListings"] is List<JobListing> jobListings)
                {
                    @foreach (var jobListing in jobListings)
                    {
                        <div class="jobListingStuff">
                            <div class="containerSplit">
                                <div class="left">
                                    <span class="jlTitle">@jobListing.Title</span>
                                    <span class="jlMiddle">Job ID: @jobListing.Job_ID</span>
                                    <span class="jlOther">Location: @jobListing.Location</span>
                                    <span class="jlOther">Salary: @jobListing.Salary</span>
                                </div>
                                <div class="right">
                                    <span>
                                        <img src="/images/JobStuff/Edit2.png" alt="Job Image" class="jImage"
                                        style="margin-top: 3px;">
                                    </span>
                                    <span>
                                        <img src="/images/JobStuff/delete.png" alt="Job Image" class="jImage">
                                    </span>
                                    
                                </div> 
                            </div> 
                        </div>
                    } 
                }

            </div>
            <div class="section" style="flex: 1 0 5%;">
                
            </div>
        </div>
    </div>
    
</body>