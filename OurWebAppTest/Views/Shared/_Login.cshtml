@model AppUser

@*Literally _Login but without Login To Account
    also changed text for a few buttons
*@
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        .inputTxt {
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            padding: 8px;
            width: 100%;
            height: 35px;
            border: 1px solid #000000;
            border-radius: 5px;
        }

        label {
            font-family: 'Inter', sans-serif;
            font-weight: 500;
            font-size: 18px;
        }

        .submitbtn {
            font-family: 'Inter', sans-serif;
            width: 100%;
            height: 35px;
            font-weight: bold;
            font-size: 18px;
            color: white;
            background-color: #1574d2;
        }

        .specBtn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 4px;
            margin: 5px 0;
            display: inline-block;
            font-size: 17px;
            line-height: 20px;
            text-decoration: none
        }

        .containerSplit2 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-gap: 30px;
            margin-left: 20px;
            margin-right: 40px;
        }

        .line {
            flex-grow: 1;
            border-top: 1px solid black;
        }

        .fb {
            background-color: #3B5998;
            color: white;
        }

        .twtr {
            background-color: #55ACEE;
            color: white;
        }

        .ggle {
            background-color: #dd4b39;
            color: white;
        }
    </style>
</head>

<form asp-controller="AppUser" asp-action="LoginAppUser" method="post">
    <div style="padding: 20px">
        <label asp-for="Email">Email</label>
        <div class="form-check">
            <input class="inputTxt" type="text" placeholder="Email"
                   asp-for="Email" />
        </div>
    </div>

    <div style="padding: 20px">
        <label asp-for="Password">Password</label>
        <div class="form-check">
            <input class="inputTxt" type="password" placeholder="Password"
                   asp-for="Password" />
        </div>
    </div>

    <div style="padding: 20px;">
        <input type="submit" value="Login"
               class="btn btn-primary submitbtn" style="width: 100%;" />
    </div>

    <div style="display: flex; align-items: center; height: 15px">
        <div class="line" style="margin-left: 20px"></div>

        <span style="padding: 20px; font-size: 20px; color:grey;">OR</span>

        <div class="line" style="margin-right: 20px"></div>
    </div>

    <div class="containerSplit2" style="margin-top: 20px">

        <a href="#" class="fb specBtn">
            @*Add Link later*@
            <i class="fa fa-facebook fa-fw"></i> Sign in with Facebook
        </a>

        <a href="#" class="twtr specBtn">
            <i class="fa fa-twitter fa-fw"></i> Sign in with Twitter
        </a>

        <a href="#" class="ggle specBtn">
            <i class="fa fa-google fa-fw"></i> Sign in with Google
        </a>
    </div>
</form>