<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    <style>
        body{
            background-color: #eef3f5;
            background-size: 100%;
        }

        .container {
            margin-bottom: 35px;
            margin-top: 35px;
            margin-left: 50px;
            margin-right: 50px;
            position: relative;
        }

        .overlay {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 30%;
            background-color: white;
            z-index: 2;
        }

        .headerOverlay {
            font-family: 'Inter', sans-serif;
            position: absolute;
            top: 0;
            left: 0;
            width: 30%;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1;
        }

        .imageOverlay {
            position: absolute;
            top: 50px;
            width: 30%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 3;
        }

        .border-shadow {
            border-radius: 5px;
            box-shadow: -3px 1px 10px 0 rgba(0, 0, 0, 0.3)
        }

        .unselectable {
            -webkit-touch-callout: none; /* Prevent iOS link highlight */
            -webkit-user-select: none; /* Safari */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer */
            user-select: none; /* Standard */
            /* Optional: Add some visual cues to indicate unselectability */
            cursor: default;
        }
    </style>

    @RenderSection("Script", false)
</head>

<body>
    <div class="container-fluid p-5 unselectable">
        <div class="container border-shadow">

            <div class="headerOverlay">
                <h3>There is Always Another Chance</h3>
                
            </div>

            <div class="imageOverlay">
                <img src="~/images/anotherchance.png" alt="Im losing it!!" style="
                height:200px; width: 200px">
            </div>

            <div class="column">
                <img src="~/images/sky2.png" alt="How did this break?" style=" 
                position: relative; overflow: hidden; width: 700px; 
                height: calc(100% - 70px);">
            </div>

            <div class="overlay">
                <div class="container-fluid">
                    @*Actual Code here *@
                    @RenderBody()
                </div>
            </div>

        </div>

    </div>
</body>